@{
    ViewData["Title"] = "Index";
}

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<h3 class="alert alert-primary">Ajax Ürün İşlemleri</h3>

<button id="btnlist" class="btn btn-outline-primary">Ürün Listesi</button>
<button id="btncreate" class="btn btn-outline-info">Ürün Ekle</button>
<button id="btndelete" class="btn btn-outline-danger">Ürün Sil</button>
<button id="btnupdate" class="btn btn-outline-success">Ürün Güncelle</button>
<button id="btnget" class="btn btn-outline-warning">Ürün Getir</button>


<hr />
<div class="alert alert-dark">Ürün Listesi</div>

<div id="productlist"></div>
<hr />


<div class="alert alert-success" > Yeni Ürün Girişi</div>
<div>
    <input type="text" placeholder="Ürün Adını Giriniz" id="productname" class="form-control" />
    <br />
    <input type="text" placeholder="Ürün Stok Sayısını Giriniz" id="productstock" class="form-control" />
    <br />
    <input type="text" placeholder="Ürün Fiyatını Giriniz" id="productprice" class="form-control" />
    <br />
</div>

<hr />
<div class="alert alert-success"> Ürün Silme Girişi</div>
<div>
    <input type="text" placeholder="Silinecek Ürün id Giriniz" id="productdeletedid" class="form-control" />
    <br />
</div>

<hr />

<div class="alert alert-success"> Ürün Detayları Getirme Paneli</div>
<div>
    <input type="text" placeholder="Bilgisi Getirilecek Ürün id Giriniz" id="productgetid" class="form-control" />
    <br />
</div>

<hr />

<div class="alert alert-success"> Ürün Güncelleme Paneli</div>
<div>
    <input type="text" placeholder="Güncellenecek Ürün ıd Giriniz" id="productidedit" class="form-control" />
    <br />
    <input type="text" placeholder="Güncellenecek Ürün Adını Giriniz" id="productnameedit" class="form-control" />
    <br />
    <input type="text" placeholder="Güncellenecek Ürün Stok Sayısını Giriniz" id="productstockedit" class="form-control" />
    <br />
    <input type="text" placeholder="Güncellenecek Ürün Fiyatını Giriniz" id="productpriceedit" class="form-control" />
    <br />
</div>

<script>

    $("#btnlist").click(function () {
        $.ajax({
            contentType: "application/json",
            dataType: "json",
            type: "Get",
            url: "/Default/ProductList",
            success: function (funk1) {
                let products = jQuery.parseJSON(funk1);
                console.log(products);

                let tablehtml = "<table class=table table-bordered>"
                                + "<tr>"
                                + "<th>Ürün Id</th>"
                                + "<th>Ürün Adı</th>"
                                + "<th>Ürün Fiyat</th>"
                                + "<th>Ürün Stok</th>"
                                + "</tr>"
                                $.each(products, (index, value) => {
                                    tablehtml += `<tr>`
                                + `<td>${value.ProductId}</td>`
                                + `<td>${value.ProductName}</td>`
                                + `<td>${value.Price}</td>`
                                + `<td>${value.Stock}</td>`
                                + `</tr>`
                });
                tablehtml += "</table>";
                $("#productlist").html(tablehtml);

            }
        });

    });

    $("#btncreate").click(function () {
        let productvalues = {
            ProductName: $("#productname").val(),
            Stock: $("#productstock").val(),
            Price: $("#productprice").val()
        };

        $.ajax({
            type: "post",
            url: "/Default/CreateProduct/",
            data: productvalues,
            success: function (funk2) {
                let result = jQuery.parseJSON(funk2);
                
                // alert("Ürün Başarıyla Eklendi.");
                swal("Tebrikler!", "Ürün Başarıyla Eklendi!", "success");

                $("#productname").val('');
                $("#productstock").val('');
                $("#productprice").val('');
                //Listeyi yeniler
                $("#btnlist").click();
            }
        });
    });

    $("#btndelete").click(function () {
        let id = $("#productdeletedid").val();
        $.ajax({
            url: "/Default/DeleteProduct/" + id,
            type: "post",
            contentType: "application/json",
            dataType: "json",
            success: function (funk3) {
                swal("Tebrikler!", "Ürün Başarıyla Silindi!", "success");
                $("#productdeletedid").val('');
                $("#btnlist").click();
            }
        });
    });

    $("#btnget").click(function () {
        let id = $("#productgetid").val();
        $.ajax({
            contentType: "application/json",
            dataType: "json",
            url: "/Default/GetProduct/" + id,
            
            
            success: function (funk4) {
                $("#productgetid").val('');
                let result = jQuery.parseJSON(funk4);
                console.log(result);
            }
        });
    });


    $("#btnupdate").click(function () {
        let values = {
            ProductId: $("#productidedit").val(),
            ProductName: $("#productnameedit").val(),
            Stock: $("#productstockedit").val(),
            Price: $("#productpriceedit").val()
        };
        $.ajax({
            url: "/Default/UpdateProduct/",
            data: values,
            success: function (funk5) {
                swal("Tebrikler!", "Ürün Başarıyla Güncellendi!", "success");

                $("#productidedit").val('');
                $("#productnameedit").val('');
                $("#productstockedit").val('');
                $("#productpriceedit").val('');
                $("#btnlist").click();
            }
        });
    });

   



</script>
